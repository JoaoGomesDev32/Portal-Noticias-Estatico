<%- include('partials/header.ejs') %>

<section class="outras-noticias mt-4">
  <div class="title-outras-noticias">
    <h2 class="section-title">Busca:</h2>
    <div class="center">
      <div style="width: 100%;" class="mais-lidas card">
        <h3 class="section-title" style="font-size:1.3rem; margin-bottom:12px;">Resultados: <%= postCount %></h3>
        <div class="mas-lidas-noticias">
          <% if(posts.length === 0) { %>
            <div class="feedback error">Nenhuma not√≠cia encontrada para sua busca.</div>
          <% } %>
          <% for(let i = 0; i < posts.length; i++) { %>
          <div class="mais-lida-noticia-single card mb-2">
            <div class="img-hover-zoom" style="width: 60px; height: 60px;">
              <img src="<%= posts[i].imagem %>" class="img-rounded" style="width:100%;height:100%;object-fit:cover;" />
            </div>
            <div class="texto-mais-lida-single">
              <h4><%= posts[i].titulo %></h4>
              <p><%- posts[i].descricaoCurta %></p>
              <a href="<%= posts[i].slug %>" class="btn mt-2">Saiba mais</a>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer.ejs') %>
