<%- include('partials/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Painel do admin</title>
    <style>
      .header-painel {
        width: 100%;
        padding: 10px;
        background-color: #00a1ff;
        color: white;
      }
      .mensagem {
        margin: 20px 0;
        padding: 12px;
        border-radius: 8px;
        background: #e3f7e3;
        color: #217a36;
        font-weight: bold;
        border: 1px solid #b6e2b6;
        text-align: center;
      }
      .mensagem.erro {
        background: #ffeaea;
        color: #b30000;
        border: 1px solid #ffb3b3;
      }
      form {
        padding: 10px;
        margin: 20px 0;
      }
      form input, form textarea {
        margin-bottom: 20px;
        padding-left: 10px;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 16px;
      }
      form textarea {
        height: 120px;
        padding: 10px;
      }
      form input[type="submit"] {
        background-color: #00a1ff;
        border: 0;
        cursor: pointer;
        color: white;
        font-weight: bold;
        transition: background 0.2s;
      }
      form input[type="submit"]:hover {
        background-color: #007bb8;
      }
      .noticias-lista {
        margin-top: 20px;
      }
      .noticia-admin-single {
        border-bottom: 2px dashed #ccc;
        padding: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.2s;
      }
      .noticia-admin-single:hover {
        background: #f5faff;
      }
      .noticia-admin-single p {
        margin: 0;
        font-weight: 500;
      }
      .btn-deletar {
        background: #ff4d4d;
        color: white;
        border: none;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        font-size: 18px;
        cursor: pointer;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .btn-deletar:hover {
        background: #b30000;
      }
      .logout-link {
        float: right;
        color: #fff;
        text-decoration: underline;
        font-size: 16px;
        margin-top: -28px;
      }
    </style>
  </head>
  <body>
    <div class="header-painel">
      <h2>Cadastro Notícia</h2>
      <a href="/admin/logout" class="logout-link">Sair</a>
    </div>
    <% if (mensagem) { %>
      <div class="mensagem <%= mensagem.includes('erro') || mensagem.includes('Erro') ? 'erro' : '' %>"><%= mensagem %></div>
    <% } %>
    <form method="post" action="/admin/cadastro">
      <input type="text" name="titulo_noticia" placeholder="Título da Notícia" />
      <input type="text" name="url_imagem" placeholder="Link da imagem da notícia..." />
      <input type="text" name="slug" placeholder="Slug" />
      <textarea name="noticia" placeholder="Notícia..."></textarea>
      <input type="submit" name="acao" value="Cadastrar!" />
    </form>
    <div class="header-painel">
      <h2>Listando Notícias</h2>
    </div>
    <div class="noticias-lista">
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(function(post) { %>
          <div class="noticia-admin-single">
            <p><strong><%= post.titulo %></strong> <span style="color:#888;font-size:13px;">(<%= post.slug %>)</span></p>
            <form method="get" action="/admin/deletar/<%= post._id %>" style="margin:0;">
              <button type="submit" class="btn-deletar" title="Deletar">&times;</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p style="text-align:center;color:#888;">Nenhuma notícia cadastrada ainda.</p>
      <% } %>
    </div>
  </body>
</html>
<%- include('partials/footer.ejs') %>
